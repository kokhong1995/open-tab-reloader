{
    "manifest_version": 2,
    "name": "Open Tab Reloader",
    "version": "1.1",

    "description": "Open Tab Reloader (OTR) is an open-source add-on project designed for running on the Firefox web browser, allowing users to reload tabs with specific time-intervals automatically.",
    "homepage_url": "https://github.com/kokhong1995/open-tab-reloader",
    "icons": {
        "48": "icons/open-tab-reloader-48.png"
    },

    "permissions": ["storage", "tabs"],

    "browser_action": {
        "default_icon": "icons/open-tab-reloader-32.png",
        "default_title": "Open Tab Reloader",
        "default_popup": "popup/main.html"
    },

    "background": {
        "scripts": ["popup/background.js"]
    },

    "browser_specific_settings": {
        "gecko": {
            "id": "opentabreloader@heansolutions.com"
        }
    }
}
